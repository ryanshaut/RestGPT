{
  "openapi": "3.0.0",
  "info": {
    "title": "Dad Joke API",
    "version": "1.0.0",
    "description": "A simple API to fetch dad jokes"
  },
  "servers": [
    {
      "url": "https://icanhazdadjoke.com"
    }
  ],
  "paths": {
    "/j/{joke_id}": {
      "get": {
        "description": "Get a dad joke by ID",
        "summary": "Get a dad joke by ID",
        "operationId": "getDadJokeById",
        "tags": [
          "Jokes"
        ],
        "parameters": [
          {
            "name": "joke_id",
            "in": "path",
            "required": true,
            "description": "The ID of the joke to retrieve",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Accept",
            "in": "header",
            "required": true,
            "description": "The content type",
            "schema": {
              "type": "string",
              "default": "application/json"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A dad joke",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "R7UfaahVfFd"
                    },
                    "joke": {
                      "type": "string",
                      "example": "My dog used to chase people on a bike a lot. It got so bad I had to take his bike away."
                    },
                    "status": {
                      "type": "integer",
                      "example": 200
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/search": {
      "get": {
        "description": "Search for dad jokes",
        "summary": "Search for dad jokes",
        "operationId": "searchDadJokes",
        "tags": [
          "Jokes"
        ],
        "parameters": [
          {
            "name": "term",
            "in": "query",
            "required": true,
            "description": "The search term to use for finding jokes",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Accept",
            "in": "header",
            "required": true,
            "description": "The content type",
            "schema": {
              "type": "string",
              "default": "application/json"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of dad jokes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "current_page": {
                      "type": "integer",
                      "example": 1
                    },
                    "limit": {
                      "type": "integer",
                      "example": 20
                    },
                    "next_page": {
                      "type": "integer",
                      "example": 1
                    },
                    "previous_page": {
                      "type": "integer",
                      "example": 1
                    },
                    "results": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "example": "GlGBIY0wAAd"
                          },
                          "joke": {
                            "type": "string",
                            "example": "How much does a hipster weigh? An instagram."
                          }
                        }
                      }
                    },
                    "search_term": {
                      "type": "string",
                      "example": "hipster"
                    },
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "total_jokes": {
                      "type": "integer",
                      "example": 2
                    },
                    "total_pages": {
                      "type": "integer",
                      "example": 1
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/": {
      "get": {
        "description": "Get a dad joke",
        "summary": "Get a random dad joke",
        "operationId": "getRandomDadJoke",
        "tags": [
          "Jokes"
        ],
        "parameters": [
          {
            "name": "Accept",
            "in": "header",
            "required": true,
            "description": "The content type",
            "schema": {
              "type": "string",
              "default": "application/json"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A random dad joke",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "R7UfaahVfFd"
                    },
                    "joke": {
                      "type": "string",
                      "example": "My dog used to chase people on a bike a lot. It got so bad I had to take his bike away."
                    },
                    "status": {
                      "type": "integer",
                      "example": 200
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
